<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorForeground">@color/foreground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="expandedTitleStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Detail Activity Item -->
    <style name="MovieItemIconsStyle">
        <item name="android:layout_height">@dimen/detail_icon_size</item>
        <item name="android:layout_width">@dimen/detail_icon_size</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="MovieItemHeaderStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/detail_item_textSize</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="MovieItemValueStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:textSize">@dimen/detail_item_textSize</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Detail Activity See All Button -->
    <style name="MovieSeeAllHolderStyle">
        <item name="android:layout_height">@dimen/detail_button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="MovieSeeAllTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/detail_button_see_all</item>
    </style>
    <style name="MovieSeeAllArrowStyle">
        <item name="android:layout_height">@dimen/detail_arrow_size</item>
        <item name="android:layout_width">@dimen/detail_arrow_size</item>
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
        <item name="android:src">@drawable/icon_arrow_right</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Detail Activity Cast Style -->
    <style name="MovieCastHolderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="MovieCastImageStyle">
        <item name="android:layout_width">@dimen/detail_cast_image_width</item>
        <item name="android:layout_height">@dimen/detail_cast_image_height</item>
        <item name="android:background">@color/default_image_background</item>
    </style>
    <style name="MovieCastTextHolderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="MovieCastNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="MovieCastRoleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
