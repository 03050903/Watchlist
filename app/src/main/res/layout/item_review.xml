<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/medium_margin"
    android:orientation="vertical"
    android:padding="@dimen/large_margin"
    android:background="@color/text_secondary">

    <!-- Header -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView style="@style/MovieItemIconsStyle"
            android:src="@drawable/icon_review"
            tools:ignore="ContentDescription" />
        <TextView android:id="@+id/review_author"
            style="@style/MovieItemHeaderStyle"
            tools:text="User Name"/>
    </LinearLayout>

    <!-- Value -->
    <TextView android:id="@+id/review_body"
        style="@style/ReviewItemValueStyle"
        tools:text="The movie's review goes here..."/>

</LinearLayout>